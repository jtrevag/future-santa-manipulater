<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-tree"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

     <form id="profile-form" action="" method="post">
        <!-- LOCAL INFORMATION -->
        <div class="col-md-12">
            <div class="well">
                <div class="row">
                    <h3 class="col-md-6 ProfileSpan"><span class="fa fa-user"></span> My Profile</h3>
                    <h3 class="col-md-6 ProfileButton">
                        <button id="ProfileButton" type="button" status="edit" class="btn btn-default btn-md" onclick="ToggleButton()">Edit Profile</button>
                    </h3>
                </div>
                
                <div class="form-group">
                    <strong>First Name</strong>
                    <input id="firstName" name="firstName" type="text" class="form-control" value="<%= user.local.firstName%>" />
                </div>

                <div class="form-group">

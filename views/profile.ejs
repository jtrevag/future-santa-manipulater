    <script>
        
        function toggleFormItems(value){
            var formItems = document.getElementsByClassName('form-control');
            for(var x = 0; x < formItems.length; x++){
                formItems[x].disabled = value;
            }   
        }
        
        function ToggleButton() {
            var ProfileButton = document.getElementById('ProfileButton');
            if (ProfileButton.getAttribute('status') == "edit") {
                toggleFormItems("");
                ProfileButton.setAttribute('status', 'save');
                ProfileButton.setAttribute('action', '/updateUser');
                ProfileButton.innerHTML = "Save Profile";
                
            } else {
                ProfileButton.setAttribute('type', 'submit');
                toggleFormItems("disabled");
                ProfileButton.setAttribute('status', 'edit');
                ProfileButton.innerHTML = "Edit Profile";
            }
        }
        
        $(function(){
           toggleFormItems("disabled");   
        });
        
        
      
    </script>
    
    
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>

                </div>

                 <div class="form-group">
                    <strong>Email</strong>
                    <input id="email" name="email" type="text" class="form-control" value="<%= user.local.email%>" />
                </div>

                 <div class="form-group">
                    <strong>Password</strong>
                    <input id="password" name="password" type="password" class="form-control" />
                </div>

                 <div class="form-group">
                    <strong>Confirm Password</strong>
                    <input id="confirmPassword" name="confirmPassword" type="password" class="form-control"/>
                </div>
                
                <div class="form-group">
                    <strong>My favorite color is:</strong>
                    <input id="color" name="color" type="text" class="form-control"  value="<%= user.local.color%>"/>
                </div>
                
                <div class="form-group">
                    <strong>My favorite show is:</strong>
                    <input id="show" name="show" type="text" class="form-control" value="<%= user.local.show%>"/>
                </div>
                
                 <div class="form-group">
                    <strong>My favorite team is:</strong>
                    <input id="team" name="team" type="text" class="form-control" value="<%= user.local.team%>"/>
                </div>
                
                <div class="form-group">
                    <strong>My hobbies include:</strong>
                    <textarea id="hobbies" name="hobbies" type="text" class="form-control" value="<%= user.local.hobbies%>"></textarea>
                </div>
                
                <div class="form-group">
                    <strong>Notes to help your santa:</strong>
                    <textarea id="notes" name="notes" type="text" class="form-control" value="<%= user.local.notes%>"></textarea>
                </div>

            </form>

                   

            </div>
        </div>

